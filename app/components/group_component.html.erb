<div class="flex flex-row gap-2 ml-6 mt-6 shadow-md">
    <div class="flex flex-col bg-white shadow p-2 border-t-4 border-green-600 rounded basis-3/5 max-w-sm w-full lg:max-w-full lg:flex w-9/12" style="overflow:overlay">
        <header class="p-2 border-b flex"> 
            <div class="flex flex-col max-w-sm w-full lg:max-w-full lg:flex w-9/12">
                <h1 class="text-lg font-mono text-green-600 max-w-sm w-full lg:max-w-full lg:flexw-9/12" style="overflow-wrap: break-word;"> <%=title %></h1>
            </div>
        </header>
        <div class="flex flex-wrap p-2 w-full gap-4">
            <div class="flex flex-col w-full">
                <h1 class="text-lg">Last activity <%= last_activity %> ago</h1>
            </div>

            <div class="flex flex-col">
                <h1 class="text-md"><%= pluralize(total_members, "Member") %></h1>
            </div>

            <div class="flex flex-col">
                <h1 class="text-md font-thin"> <%= pluralize(total_posts, "Post") %></h1>
            </div>
            <%if @current_user.member? @group%>
                <div class="flex flex-col">
                    <h1><%=link_to "View group", group_path(@group.id), class: "text-gray-600 block hover:text-green-300 focus:outline-none" %></h1>
                </div>
            <%end%>
        </div>
    </div>
    <%if @current_user.member? @group%>
        <div class='flex items-center justify-center mr-10 basis-2/5'>
            <div class='flex bg-white border-solid rounded-3xl border-green-600 px-8 py-4 mb-4 w-28 mx-16' style="
                border: solid;
                border-color: green;"
            >
                <div class="ml-2">
                    <i class="fa fa-check"></i>
                </div>
            </div>
        </div>
    <%else%>
        <div class='flex items-center justify-center mr-10 basis-2/5'>
            <%= link_to group_group_memberships_path(@group.id, role: :member), method: :post,
                class:'flex break-inside bg-black rounded-3xl px-8 py-4 mb-4 w-28 dark:bg-slate-800 dark:text-white mx-16', style: "
    background-color: black;
" do %>
                <div class='flex items-center justify-between flex-1'>
                <span class='text-lg font-medium text-white' style="margin-right: 10px;">Join</span>
                <svg width='17' height='17' viewBox='0 0 17 17' fill='none' xmlns='http://www.w3.org/2000/svg'>
