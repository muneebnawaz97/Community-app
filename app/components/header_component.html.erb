<div class="flex justify-end items-end content-end">
  <div class="items-center justify-end md:flex md:flex-1 lg:w-0">
    <% if @current_user%>
    <%= link_to "Sign out", destroy_user_session_path, method: :delete, class:"ml-20 inline-flex items-center justify-center whitespace-nowrap rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-base font-medium text-white shadow-sm hover:bg-indigo-700" %>
    <% else %>
      <%= link_to "Sign in", new_user_session_path, class:"whitespace-nowrap text-base font-medium text-gray-500 hover:text-gray-900"%>
      <%= link_to "Sign up", new_user_registration_path, class:"ml-20 inline-flex items-center justify-center whitespace-nowrap rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-base font-medium text-white shadow-sm hover:bg-indigo-700" %>
    <% end %>
  </div>
</div>
